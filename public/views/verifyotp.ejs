<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
     <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/7cd5bd2715.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../css/loginstyle.css">
    <title> CollegeStore| Verify Email account </title>
  </head>
  <body>
    <!-- <section id="head"> -->
      <nav class="navbar navbar-expand-md">
        <!-- Brand -->
        <p class="navbar-brand">CollegeStore</p>
      
        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
        </button>
      
        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ml-auto custom-link">
          <!-- <li class="nav-item">
          <a class="nav-link" href="/login">Log In</a>
          </li>
          <li class="nav-item">
          <a class="nav-link" href="/">About Us</a>
          </li> -->
        </ul>
        </div>
      </nav>
      <!-- </section> -->
      <section id="main">
      <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Enter OTP</h5>
            <p><%= text %></p>
            <% if(msg != ""){ %>
            <div id="erralert" class="alert alert-warning alert-dismissible fade show" role="alert">
              <%= typeof msg != 'undefined' ? msg : "" %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <% } %>
            <form class="form-signin" method="POST">
              <div class="form-label-group">

              <div class="form-label-group">
                <input type="number" id="OTP" name ='OTP' class="form-control" placeholder="Enter OTP here" required>
                <label for="OTP">OTP</label>
              </div>
              <div style="text-align: center;">
            <button
                  class="btn btn-lg btn-primary text-uppercase"
                  type="submit"
                  name="submit"
                >
                  Verify
            </button>
          </div>
          </div>
            </form>
            <% if(msg != ""){ %>
              <div style="text-align: center; font-size: 120%;"><a href="/verify">Send Again</a></div>
            <% } %>
        </div>
      </div>
    </div>
  </section>
      <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
  </html>
