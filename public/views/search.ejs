<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/7cd5bd2715.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../css/search.css">
    <title> CollegeStore| Search | <%= category %></title>
  </head>
  <body>
        <nav class="navbar navbar-expand-lg fixed-top bg-light">
            <p class="navbar-brand">CollegeStore</p>
            <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/homepage">Home</a>
                  </li>
                  <li class="nav-item dropdown" style="cursor: pointer;">
                    <div class="nav-link dropdown-toggle  custom-nav" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <%= category %> 
                    </div>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <a class="dropdown-item" href="/homepage">All Categories</a>
                      <a class="dropdown-item" href="/homepage/book">Books</a>
                      <a class="dropdown-item" href="/homepage/notes">Notes</a>
                      <a class="dropdown-item" href="/homepage/clothing">Clothing</a>
                      <a class="dropdown-item" href="/homepage/calculator">Calculators</a>
                      <a class="dropdown-item" href="/homepage/pc">PCs</a>
                      <a class="dropdown-item" href="/homepage/other">others</a>
                    </div>
                  </li>
                  <li class="mob-dropdown nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <%= username %>  <i class="fas fa-user-circle"></i>  
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <a class="dropdown-item" href="/profile/<%=username%>">Profile</a>
                      <a class="dropdown-item" href="/request/0">My Deals</a>
                      <a class="dropdown-item" href="/history/0">My History</a>
                      <a class="dropdown-item" href="/sellproduct">Sell</a>
                      <a class="dropdown-item" href="/cart">Cart</a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" href="/logout">Log Out</a>
                    </div>
                  </li>
                  <li class="nav-item mob-link">
                    <a class="nav-link" href="/profile/<%=username%>"><i class="fas fa-user-circle"></i> <%= username %>'s Profile</a>
                  </li>
                  <li class="nav-item mob-link">
                    <a class="nav-link" href="/request/0">My Deals</a>
                  </li>
                  <li class="nav-item mob-link">
                    <a class="nav-link" href="/history/0">My History</a>
                  </li>
                  <li class="nav-item mob-link">
                    <a class="nav-link" href="/sellproduct">Sell</a>
                  </li>
                  <li class="nav-item mob-link">
                    <a class="nav-link" href="/cart">Cart</a>
                  </li>
                  <li class="nav-item mob-link">
                    <a class="nav-link" href="/logout">Log Out</a>
                  </li>
                  
              </ul>
            </div>
            <form class="search-bar w-100" method="POST">
              <input class="w-75 search-inp" type="text" name="productinput" placeholder="<%= searchmsg %>" value="<%= searchvalue %>" name="productname">
              <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
            </form>
          </nav>
    <section id="products">
      <% if (product.length > 0) { %>
      <h1><%= heading %></h1>
      <hr width="100%">
    <div class="row">
      <% for(var i=0; i< product.length; i++) { %>
        <a href="/product/<%= product[i][4] %>" class="info">
      <div class="col-lg-4 col-md-6 center-block">
        <div class="card">
          <img class="card-img-top" src="<%= product[i][3] %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= product[i][0] %></h5>
            <p class="card-text">Years of Usage: <%= product[i][2] %></p>
            <p class="card-text">Rs. <%= product[i][1] %></p>
            <!-- <a href="/product/<%= product[i][4] %>" class="btn btn-primary">More Info</a> -->
            <% if (username != product[i][5]) { %>
            <a href="/cart/<%= product[i][4] %>" class="btn btn-primary" >Add to Cart</a>
            <% } else { %>
              <a href="/cart/<%= product[i][4] %>" class="btn btn-primary" style="visibility: hidden;">Add to Cart</a>
            <% } %>
          </div>
        </div>
      </div>
    </a>
      <% } %>
    </div>
    <div style="text-align: center; margin-top: 5%;"><div id="loadmore" class="btn btn-primary">More</div></div>
  <% } else { %>
    <h4 style="text-align: center;">No Results</h4>
  <% } %>
    </section>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script>
      $('.card').hover(
        function(){
          $(this).animate({
            marginTop: "-1%",
          },200);
        },
        function(){
          $(this).animate({
            marginTop: "0%",
          },200);
        }
      );
      $('#products .card').slice(0,12).show();
      if( $('#products .card:hidden').length === 0 ){
          $('#loadmore').hide();
        }
      $('#loadmore').on('click', function(){
        $('#products .card:hidden').slice(0,12).show();
        if( $('#products .card:hidden').length === 0 ){
          $('#loadmore').hide();
        }
      });
    </script>
    </body>
</html>
